<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="7dp" />
<!--            <gradient android:gradientRadius="10dp"/>-->
        </shape>
    </item>

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C0C6CD" />
            <corners android:radius="7dp" />
<!--            <stroke android:color="#F3F8FF" android:width="10px" />-->
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="3dp"
        android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#E6E8EF" />
            <corners android:radius="7dp" />
        </shape>
    </item>
</layer-list>