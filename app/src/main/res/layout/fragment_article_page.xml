<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".core.design.articlepage.ArticlePageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/articlepage_headerImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="header image"
                android:maxHeight="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/test_deadstranding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/articlepage_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/article_margin"
                android:layout_marginTop="@dimen/article_margin"
                android:layout_marginEnd="@dimen/article_margin"
                android:layout_marginBottom="2dp"
                android:text="Cyborgs"
                android:textColor="@color/colorTextTopic"
                app:layout_constraintTop_toBottomOf="@id/articlepage_headerImage" />

            <TextView
                android:id="@+id/articlepage_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/article_margin"
                android:layout_marginEnd="@dimen/article_margin"
                android:text="In gesprek met James Lovelock, de profeet van moeder aarde"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/articlepage_topic" />

            <TextView
                android:id="@+id/articlepage_teaser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/article_margin"
                android:layout_marginTop="@dimen/article_margin"
                android:layout_marginEnd="@dimen/article_margin"
                android:layout_marginBottom="@dimen/article_margin"
                android:text="Met kunstmatige intelligentie kunnen we de aarde redden, denkt James Lovelock. In de jaren zeventig ontwikkelde de 100-jarige chemicus de Gaia-hypothese, over de aarde als zelfregulerend systeem. Klimaatverandering bedreigt dat mechanisme."
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintTop_toBottomOf="@id/articlepage_title" />

            <LinearLayout
                android:id="@+id/articlepage_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/articlepage_teaser">

                <TextView
                    android:id="@+id/test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/article_margin"
                    android:layout_marginTop="@dimen/article_margin"
                    android:layout_marginEnd="@dimen/article_margin"
                    android:layout_marginBottom="@dimen/article_margin"
                    android:text="Met kunstmatige intelligentie kunnen we de aarde redden, denkt James Lovelock. In de jaren zeventig ontwikkelde de 100-jarige chemicus de Gaia-hypothese, over de aarde als zelfregulerend systeem. Klimaatverandering bedreigt dat mechanisme."
                    android:textColor="@color/colorTextPrimary" />

                <TextView
                    android:id="@+id/test1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/article_margin"
                    android:layout_marginTop="@dimen/article_margin"
                    android:layout_marginEnd="@dimen/article_margin"
                    android:layout_marginBottom="@dimen/article_margin"
                    android:text="Met kunstmatige intelligentie kunnen we de aarde redden, denkt James Lovelock. In de jaren zeventig ontwikkelde de 100-jarige chemicus de Gaia-hypothese, over de aarde als zelfregulerend systeem. Klimaatverandering bedreigt dat mechanisme."
                    android:textColor="@color/colorTextPrimary" />

                <TextView
                    android:id="@+id/test2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/article_margin"
                    android:layout_marginTop="@dimen/article_margin"
                    android:layout_marginEnd="@dimen/article_margin"
                    android:layout_marginBottom="@dimen/article_margin"
                    android:text="Met kunstmatige intelligentie kunnen we de aarde redden, denkt James Lovelock. In de jaren zeventig ontwikkelde de 100-jarige chemicus de Gaia-hypothese, over de aarde als zelfregulerend systeem. Klimaatverandering bedreigt dat mechanisme."
                    android:textColor="@color/colorTextPrimary" />

                <TextView
                    android:id="@+id/test3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/article_margin"
                    android:layout_marginTop="@dimen/article_margin"
                    android:layout_marginEnd="@dimen/article_margin"
                    android:layout_marginBottom="@dimen/article_margin"
                    android:text="Met kunstmatige intelligentie kunnen we de aarde redden, denkt James Lovelock. In de jaren zeventig ontwikkelde de 100-jarige chemicus de Gaia-hypothese, over de aarde als zelfregulerend systeem. Klimaatverandering bedreigt dat mechanisme."
                    android:textColor="@color/colorTextPrimary" />

                <TextView
                    android:id="@+id/test11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/article_margin"
                    android:layout_marginTop="@dimen/article_margin"
                    android:layout_marginEnd="@dimen/article_margin"
                    android:layout_marginBottom="@dimen/article_margin"
                    android:text="Met kunstmatige intelligentie kunnen we de aarde redden, denkt James Lovelock. In de jaren zeventig ontwikkelde de 100-jarige chemicus de Gaia-hypothese, over de aarde als zelfregulerend systeem. Klimaatverandering bedreigt dat mechanisme."
                    android:textColor="@color/colorTextPrimary" />

                <TextView
                    android:id="@+id/test22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/article_margin"
                    android:layout_marginTop="@dimen/article_margin"
                    android:layout_marginEnd="@dimen/article_margin"
                    android:layout_marginBottom="@dimen/article_margin"
                    android:text="Met kunstmatige intelligentie kunnen we de aarde redden, denkt James Lovelock. In de jaren zeventig ontwikkelde de 100-jarige chemicus de Gaia-hypothese, over de aarde als zelfregulerend systeem. Klimaatverandering bedreigt dat mechanisme."
                    android:textColor="@color/colorTextPrimary" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>