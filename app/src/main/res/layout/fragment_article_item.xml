<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/article_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:contentDescription="Image of product"
            app:srcCompat="@drawable/test_deadstranding"/>

        <TextView
            android:id="@+id/article_item_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/article_margin"
            android:layout_marginTop="@dimen/article_margin"
            android:layout_marginEnd="@dimen/article_margin"
            android:layout_marginBottom="2dp"
            android:text="Topic"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/colorTextTopic" />

        <TextView
            android:id="@+id/article_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/article_margin"
            android:layout_marginEnd="@dimen/article_margin"
            android:text="Title"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/colorTextPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/article_item_teaser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/article_margin"
            android:layout_marginStart="@dimen/article_margin"
            android:layout_marginEnd="@dimen/article_margin"
            android:layout_marginBottom="@dimen/article_margin"
            android:text="test"
            android:textColor="@color/colorTextPrimary"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
